pipeline {
  agent any
  stages {
    stage('Build Docker') {
    steps{
    	script{
          sh '''
          echo 'Buid Docker Image'
          docker build -t rohit:rohit .
          '''
          }
        }
      }
    stage('Crete Container'){
      agent {
        docker {image 'rohit:rohit'}
      } 
      steps{
          sh "echo 'Crete container using Docker Image'"
          sh 'sleep infinity'
      }
    }
  }
}
